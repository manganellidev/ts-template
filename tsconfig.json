{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2022",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "exclude": ["tests"]
}
